<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#948BFC"
    tools:context=".ModifyElementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTituloEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_extrabold"
            android:text="EDITAR PROYECTO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtId1ProDelete"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="ISPI del proyecto"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCargar"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="#47307F"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center|center_vertical"
                android:textColorHighlight="@color/white"
                android:textColorLink="@color/white"
                android:textSize="25sp"
                android:tooltipText="Cargar proyecto por ISPI"
                app:icon="@android:drawable/ic_menu_more"
                app:iconGravity="textEnd"
                app:iconPadding="0dp"
                app:iconSize="50dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/txtIdProDelete"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="Nombre del proyecto"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtDescProEdit"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="DescripciÃ³n del proyecto"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtImgProEdit"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:hint="URL imagen del proyecto"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:backgroundTint="#47307F"
            android:fontFamily="@font/poppins_extrabold"
            android:gravity="center|center_vertical"
            android:text="EDITAR"
            android:textColorHighlight="@color/white"
            android:textColorLink="@color/white"
            android:textSize="25sp" />

    </LinearLayout>

</FrameLayout>